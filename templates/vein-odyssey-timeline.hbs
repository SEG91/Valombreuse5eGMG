{{#with (lookup tabs "timeline") as |tab|}}
<section class="tab {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">

  <section class="odyssey-tab directory members" data-section="odyssey">
    <header class="odyssey-header flexrow">
      <div class="col-name">{{ localize "Valombreuse5eGMG.Odyssey.Name" }}</div>
      <div class="col-region">{{ localize "Valombreuse5eGMG.Odyssey.Region" }}</div>
      <div class="col-date">{{ localize "Valombreuse5eGMG.Odyssey.Date" }}</div>
      <div class="col-excerpt">{{ localize "Valombreuse5eGMG.Odyssey.Excerpt" }}</div>
      <div class="col-controls">&nbsp;</div>
    </header>

    <div class="odyssey-scroll">
      <ol class="odyssey-list directory-list">
        {{#each @root.valombreuse.odysseys as |od|}}
          <li class="ody-row flexrow" data-uuid="{{od.uuid}}" data-order="{{od.order}}">

            <div class="col-name flexrow">
              <a class="secret-link"
                 data-action="odysseyOpen"
                 data-uuid="{{od.uuid}}"
                 title="{{od.name}}">
                {{od.name}}
              </a>
            </div>

            <div class="col-region">
              <span class="ody-pill">{{od.region}}</span>
            </div>

            <div class="col-date">
              <span class="ody-date">{{od.dateLabel}}</span>
            </div>

            <div class="col-excerpt">
              <span class="ody-excerpt">{{od.excerpt}}</span>
            </div>

            <div class="col-controls secret-controls">
              <a class="action-button secret-remove"
                 data-action="odysseyRemove"
                 data-uuid="{{od.uuid}}"
                 title="{{ localize 'Valombreuse5eGMG.secrets.remove' }}">
                <i class="fa-solid fa-xmark"></i>
              </a>
            </div>
          </li>
        {{else}}
          <li class="ody-row ody-empty">
            <em>{{ localize "Valombreuse5eGMG.Odysseys.NoOdysseys" }}</em>
          </li>
        {{/each}}
      </ol>
    </div>
  </section>

</section>
{{/with}}
