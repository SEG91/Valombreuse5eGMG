<form class="{{cssClass}}" autocomplete="off">
  <div class="valombreuse wrap valombreuse-bg-std">
    <!-- HEADER -->
        <div class="header" role="banner" aria-label="Bannière supérieure">
            <div class="valombreuse center" id="logo-banner" title="Logo Valombreuse">
                 <img src="/modules/valombreuse5egmg/assets/images/Valombreuse-Logo.webp"
                     alt="Valombreuse" loading="lazy" decoding="async" />
            </div>
        </div>
       <section class="vein-hero" aria-label="{{ localize 'Valombreuse5eGMG.ui.secret' }}">
  <div class="vein-hero__bg"
       style="background-image:url('{{system.item.image}}{{#unless system.item.image}}{{item.img}}{{/unless}}');"
       aria-hidden="true"></div>
  <div class="vein-hero__scrim" aria-hidden="true"></div>

  <div class="vein-hero__content">
    <div class="vein-hero__row">
      <img class="vein-hero__avatar profession-img"
           src="{{system.vein.image}}{{#unless system.vein.image}}{{item.img}}{{/unless}}"
           data-edit="img"
           alt="{{item.name}}"
           title="{{item.name}}"/>

      <div class="vein-hero__textblock">

        {{!-- Ligne: Nom du Secret --}}
        <div class="vein-hero__line secret__wrapper">
          <span class="vein-hero__label">{{ localize 'Valombreuse5eGMG.ui.secret' }}</span>
          <input class="secret-input-rounded"
                 name="name"
                 type="text"
                 value="{{item.name}}"
                 placeholder="{{ localize 'VALOMBREUSE.ui.namePlaceholder' }}"
                 data-dtype="String"/>
        </div>

        {{!-- Ligne: Type du Secret --}}
        <div class="vein-hero__line secret__wrapper">
          <span class="vein-hero__label">{{ localize 'Valombreuse5eGMG.ui.secrettype' }}</span>
          <select id="secret-type"
                  name="system.type.subtype"
                  class="secret-input-rounded">
            {{selectOptions (getSecretTypeOptions) selected=system.type.subtype blank=""}}
          </select>
        </div>

        {{!-- Ligne: Niveau du Secret --}}
        <div class="vein-hero__line secret__wrapper">
          <span class="vein-hero__label">{{ localize 'Valombreuse5eGMG.ui.secretlevel' }}</span>
          <input id="secret-level"
                 name="system.quantity"
                 class="secret-input-rounded"
                 type="number" min="0" step="1"
                 value="{{system.quantity}}"
                 data-dtype="Number"
                 placeholder="0"/>
        </div>

      </div>
    </div>
  </div>
</section>
     <div class="description-wrapper">
  <h3 class="description-header">
    <i class="accordion-indicator fa-solid fa-chevron-down"></i>
    {{localize "DND5E.Description"}}
  </h3>

  <div class="description-body">
    <prose-mirror
      name="system.description.value"
      value="{{{system.description.value}}}"  <!-- triple braces to keep HTML -->
      {{#unless @root.editable}}disabled{{/unless}}
      collaborate="false">
    </prose-mirror>
  </div>
</div>


 

        <div class="footer" role="footer" aria-label="Bannière inférieure">
            <div class="valombreuse center" id="logo-banner" title="Logo Valombreuse">
                <img src="/modules/valombreuse5egmg/assets/images/Valombreuse-Logo.webp"
                alt="Valombreuse" loading="lazy" decoding="async" />
            </div>
        </div>

  </div>
</form>
