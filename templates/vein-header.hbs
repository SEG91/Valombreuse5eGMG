<section class="vein-hero" aria-label="{{ localize 'Valombreuse5eGMG.ui.vein' }}">
  <div class="vein-hero__bg"
       style="background-image:url('{{system.vein.image}}{{#unless system.vein.image}}{{actor.img}}{{/unless}}');"
       aria-hidden="true"></div>
  <div class="vein-hero__scrim" aria-hidden="true"></div>

  <div class="vein-hero__content">
    <div class="vein-hero__row">
      <img class="vein-hero__avatar profession-img"
           src="{{system.vein.image}}{{#unless system.vein.image}}{{actor.img}}{{/unless}}"
           data-edit="img"
           alt="{{actor.name}}"
           title="{{actor.name}}"/>

      <div class="vein-hero__textblock">

        {{!-- Ligne: Nom de la Veine --}}
        <div class="vein-hero__line secret__wrapper">
          <span class="vein-hero__label">{{ localize 'Valombreuse5eGMG.ui.vein' }}</span>
          {{#if isGM}}
            <input class="secret-input-rounded"
                   name="name"
                   type="text"
                   value="{{actor.name}}"
                   placeholder="{{ localize 'VALOMBREUSE.ui.namePlaceholder' }}"
                   data-dtype="String"/>
          {{else}}
            <span class="vein-hero__value">{{actor.name}}</span>
          {{/if}}
        </div>

        {{!-- Ligne: Niveau de la Veine (calculé via helper) --}}
        <div class="vein-hero__line secret__wrapper">
          <span class="vein-hero__label">{{ localize 'Valombreuse5eGMG.ui.veinLevel' }}</span>
          <span class="vein-hero__value vein-hero__awakening">
            {{getVeinLevel actor}}
          </span>
        </div>

        {{!-- Ligne: Awakening (lecture seule, calculé) --}}
        <div class="vein-hero__line secret__wrapper">
          <span class="vein-hero__label">{{ localize 'Valombreuse5eGMG.ui.awakening' }}</span>
          <span class="vein-hero__value vein-hero__awakening">
            {{getAwakening actor}}
          </span>
        </div>

      </div>
    </div>
  </div>
</section>
